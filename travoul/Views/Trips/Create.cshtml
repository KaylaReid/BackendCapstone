                </div>
            </div>
            <button type=button class="add-more-food">Add More Food Places</button>
            <hr />
            <div class="Places">
                <h3>Places</h3>
                <div>
                    <div>
                        <label for="visit-name-1">Name</label>
                        <input asp-for="@Model.EnteredTripVisitLocations[0].Name" type="text" id="visit-name-1" />
                    </div>
                    <div>
