                <div class="Food">
                <h3>Food</h3>
                <div>
                    <div>
                        <label for="Food-name-1">Name</label>
                        <input asp-for="@Model.EnteredTripFoodLocations[0].Name" type="text" id="Food-name-1"/>
                    </div>
                    <div>
                        <label for="Food-desc-1">Description</label>
                        <input asp-for="@Model.EnteredTripFoodLocations[0].Description" type="text" id="Food-desc-1"/>
                    </div>
                </div>
                <div>
                    <div>
                        <label for="Food-name-2">Name</label>
                        <input asp-for="@Model.EnteredTripFoodLocations[1].Name" type="text" id="Food-name-2" />
                    </div>
                    <div>
                        <label for="Food-desc-2">Description</label>
                        <input asp-for="@Model.EnteredTripFoodLocations[1].Description" type="text" id="Food-desc-2" />
                    </div>
                </div>
                <div>
                    <div>
                        <label for="Food-name-3">Name</label>
                        <input asp-for="@Model.EnteredTripFoodLocations[2].Name" type="text" id="Food-name-3" />
