                        <input asp-for="@Model.EnteredTripVisitLocations[2].Name" type="text" id="visit-name-3" />
                    </div>
                    <div>
                        <label for="visit-desc-3">Description</label>
                        <input asp-for="@Model.EnteredTripVisitLocations[2].Description" type="text" id="visit-desc-3" />
                    </div>
                </div>
            </div>
