@model travoul.Models.ViewModels.TripSearchViewModel

@{
    ViewData["Title"] = "Search";
}

<h3 class="text-center mt-3">Showing Results For</h3>
<hr />
<h5 class="text-center">"@Model.Search"</h5>
<hr />

@foreach (Trip trip in Model.Trips)
{<div class="card mb-3 p-2 finish-travoul-media">

        <div class="media">
            <img class="m-2 index-trip-img" src="~/images/chuttersnap-176806-unsplash.jpg" alt="Generic placeholder image">
            <div class="media-body mt-1 ml-3">
                <div class="card-text text-center">@trip.Continent.Name</div>
                <hr />
                <h5 class="card-text">@trip.Title</h5>
                <div class="d-flex justify-content-start">
                    <div class="card-text mr-4">@trip.Location</div>
                    <div class="card-text">@trip.TripDates</div>
                </div>
                <div class="card-text">@trip.Accommodation</div>
                <div class="d-flex justify-content-end mt-4">
                    <a class="btn btn-secondary btn-sm" asp-controller="Trips" asp-action="Details" asp-route-id="@trip.TripId">Details</a>
                </div>
            </div>
        </div>
    </div>
}

 <div class="d-flex justify-content-end">
     <a class="btn btn-sm btn-secondary" asp-controller="Trips" asp-action="Index">Back to List</a>
 </div>
