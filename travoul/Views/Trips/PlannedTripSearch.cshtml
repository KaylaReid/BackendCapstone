@model travoul.Models.ViewModels.TripSearchViewModel

@{
    ViewData["Title"] = "Search";
}

<h3 class="text-center mt-3">Showing Results For</h3>
<hr />
<h5 class="text-center">"@Model.Search"</h5>
<hr />

<div class="d-flex flex-wrap justify-content-around">
    @foreach (Trip trip in Model.Trips)
    {
        <div class="card mt-3 pre-trip-card">
            <h5 class="card-header">@trip.Continent.Name</h5>
            <div class="card-body">
                <h5 class="card-title">@trip.Title</h5>
                <p class="card-text">@trip.Location</p>
                <p class="card-text">@trip.TripDates</p>
                <p class="card-text">@trip.Accommodation</p>
                @if (trip.Budget == null)
                {
                    <p class="card-text text-muted font-italic">None</p>
                }
                else
                {
                    <p class="card-text">@trip.Budget</p>
                }
                <a asp-controller="Trips" asp-action="PlannedTripDetails" asp-route-id="@trip.TripId" class="btn btn-sm btn-secondary">Details</a>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-end">
    <a class="btn btn-sm btn-secondary" asp-controller="Trips" asp-action="PlannedTrips">Back to List</a>
</div>


